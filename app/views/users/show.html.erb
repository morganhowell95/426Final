<% provide(:title, @user.name) %>

 <div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        Hacker Name: <%= @user.name %><br>
        Hacker ID:<b> <%= session[:user_id] %></b>
      </h1>
    </section>
  </aside>
</div> 


<div class="center jumbotron textback row">

  <div class="col-md-10">
  <p id="console-title"> Text Editor </p>
  <textarea id="editor">
  
  </textarea>
  <div type="button" class="btn btn-default submit"> Submit </div>
  </div>

  <div class="col-md-2">

    <h5> Whitelist </h5>

    <div id="list-container" class="container">
    <table id="whitelist" class="table table-hover">
      <tr>
        <td data-key="ForStatement">for loop</td>
      </tr>
      <tr>
        <td data-key="VariableDeclaration">variable declaration</td>
      </tr>
      <tr>
        <td data-key="WhileStatement">while loop</td>
      </tr>
      <tr>
        <td data-key="SwitchStatement">switch statement</td>
      </tr>
      <tr>
        <td data-key="ThisExpression">using "this"</td>
      </tr>
      <tr>
        <td data-key="IfStatement">if statement</td>
      </tr>
    </table>
    </div>

    <h5> Blacklist </h5>
    <div id="list-container" class="container">
    <table id="blacklist" class="table table-hover">
      <tr>
        <td data-key="ForStatement">for loop</td>
      </tr>
      <tr>
        <td data-key="VariableDeclaration">variable declaration</td>
      </tr>
      <tr>
        <td data-key="WhileStatement">while loop</td>
      </tr>
      <tr>
        <td data-key="SwitchStatement">switch statement</td>
      </tr>
      <tr>
        <td data-key="ThisExpression">using "this"</td>
      </tr>
      <tr>
        <td data-key="IfStatement">if statement</td>
      </tr>
    </table>
    </div>

    <div id="resetlist" type="button" class="btn btn-default submit"> Reset </div>
  </div>

</div>

<div class="center row">
    <div id="console-out" class="container textback">
      <p id="structure-title" class="console-title"> Console </p>

      <div class="user-feedback">
        <p id="output" > Welcome to JS Challenge! Please select your desired layout below. Restrict and force certain keywords above.</p>
        <p id="progress">...<p>

      </div>
    
    </div>
    
</div>


<div class="center row">
    <div id="structuremake" class="container textback">
      <p id="structure-title"> Enforce a Hierarchy Structure </p>

      <hr>
      <div>
      <div class="btn-group">
        <button type="button" class="level-select levelselect-0 btn btn-default dropdown-toggle" data-toggle="dropdown" entered="false" data-level="0" aria-haspopup="true" aria-expanded="false">Level 0 â–¾</button>
        <ul class="dropdown-menu">
          <li><a data-key="ForStatement">for</a></li>
          <li><a data-key="IfStatement">if</a></li>
          <li><a data-key="SwitchStatement">switch</a></li>
          <li><a data-key="VariableDeclaration">declare var</a></li>
          <li><a data-key="WhileStatement">while</a></li>
          <li><a data-key="ThisExpression">using "this"</a></li>
        </ul>
      </div>
      <h2 id="keyword-describe-0" class="text-right"> 
    </div>

    </div>
    <div id="resetstructure" type="button" class="btn btn-warning submit"> Reset Hierarchy Structure</div>
    
</div>


